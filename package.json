{
  "name": "retrofootball-sim",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": ["packages/*"],
  "scripts": {
    "dev": "pnpm -C packages/server dev",
    "dev:client": "pnpm -C packages/client dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "dev:all": "concurrently -k -n server,client \"pnpm -C packages/server dev\" \"pnpm -C packages/client dev\"",
    "postdev:all": "node -e \"setTimeout(()=>{require('child_process').exec(process.platform==='win32'?'start http://localhost:5173':(process.platform==='darwin'?'open http://localhost:5173':'xdg-open http://localhost:5173'))}, 2500)\""
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
}
